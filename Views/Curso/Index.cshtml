@model ListaCursoViewModel

<h1>Lista de Cursos</h1>

<div class="row">
     <h1>@ViewData["Title"]</h1>
     <table class="table">
         
         <thead>
            <tr>
               <th scope="col">Id</th>
               <th scope="col">Nome</th>
               <th scope="col">Completo?</th>
               <th scope="col">Concluir</th>
               <th scope="col">Apagar</th>
               <th scorpe="col">Atualizar</th>
            </tr>
         </thead>

         <tbody>
            @foreach (var item in Model.Cursos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.TaCompleta</td>
                    <td><a 
                           asp-controller="Curso" 
                           asp-action="ToComplete" 
                           asp-route-id="@item.Id" 
                           class="btn btn-success" >
                           Concluir
                        </a>
                    </td>
                    <td><a 
                           asp-controller="Curso" 
                           asp-action="Delete" 
                           asp-route-id="@item.Id" 
                           class="btn btn-danger" >
                           Apagar
                        </a>
                    </td>
                    <td><a 
                           asp-controller="Curso" 
                           asp-action="Edit" 
                           asp-route-id="@item.Id" 
                           class="btn btn-info" >
                           Atualizar
                        </a>
                    </td>
                    
                </tr>   
            }

         </tbody>


     </table>

</div>
