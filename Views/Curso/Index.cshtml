@model ListaCursoViewModel

<h1>Lista de Cursos</h1>

<div class="row">
     <h1>@ViewData["Title"]</h1>
     <table class="table">
         
         <thead>
            <tr>
               <th scope="col">Id</th>
               <th scope="col">Nome</th>
               <th scope="col">Iniciar</th>
               <th scope="col">Deletar</th>
               <th scorpe="col">Atualizar</th>
            </tr>
         </thead>

         <tbody>
            @foreach (var item in Model.Cursos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td><button type="button" class="btn btn-outline-success">Iniciar</button></td>
                    <td><button type="button" class="btn btn-outline-danger">Apagar</button></td>
                    <td> <button type="button" class="btn btn-outline-info">Atualizar</button></td>
                </tr>   
            }

         </tbody>


     </table>

</div>
